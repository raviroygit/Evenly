{
  "name": "evenly-backend",
  "version": "1.0.0",
  "description": "Backend API for Evenly",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run kill-ports && npm run db:init && tsx watch src/server.ts",
    "kill-ports": "lsof -ti:3001,3002 | xargs kill -9 2>/dev/null || true",
    "clean": "pkill -f 'evenly-backend.*tsx' 2>/dev/null || true",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:init": "tsx scripts/migrate.ts",
    "db:cleanup": "tsx scripts/cleanup-data.ts",
    "db:reset": "npm run db:init && npm run dev",
    "dev:migrate": "npm run db:init && npm run dev",
    "start:migrate": "npm run db:init && npm start"
  },
  "keywords": [
    "splitwise",
    "evenly",
    "expense-sharing",
    "fastify",
    "typescript",
    "drizzle"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@neondatabase/serverless": "^0.9.4",
    "@types/nodemailer": "^7.0.2",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "ejs": "^3.1.10",
    "fastify": "^4.29.1",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.9",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "drizzle-kit": "^0.24.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
